-- outer join, case 1
SELECT 
    HR.EMPLOYEES.EMPLOYEE_ID,
    HR.EMPLOYEES.FIRST_NAME,
    HR.EMPLOYEES.DEPARTMENT_ID,
    HR.DEPARTMENTS.DEPARTMENT_NAME
FROM 
    HR.EMPLOYEES, 
    HR.DEPARTMENTS
    WHERE HR.EMPLOYEES.DEPARTMENT_ID = HR.DEPARTMENTS.DEPARTMENT_ID(+)
    ORDER BY EMPLOYEE_ID;

-- outer join, case 2
SELECT 
    HR.EMPLOYEES.EMPLOYEE_ID,
    HR.EMPLOYEES.FIRST_NAME,
    HR.EMPLOYEES.DEPARTMENT_ID,
    HR.DEPARTMENTS.DEPARTMENT_NAME
FROM 
    HR.EMPLOYEES, 
    HR.DEPARTMENTS
    WHERE HR.EMPLOYEES.DEPARTMENT_ID(+) = HR.DEPARTMENTS.DEPARTMENT_ID
    ORDER BY EMPLOYEE_ID;