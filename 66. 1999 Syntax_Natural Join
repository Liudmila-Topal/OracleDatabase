-- natural join between DEPARTMENTS and LOCATIONS
SELECT 
    HR.DEPARTMENTS.DEPARTMENT_ID,
    HR.DEPARTMENTS.DEPARTMENT_NAME,
    LOCATION_ID, -- note you can not prefix table name in the match column/ it's present in both table
    HR.LOCATIONS.CITY
FROM HR.DEPARTMENTS
NATURAL JOIN HR.LOCATIONS;

SELECT 
    HR.DEPARTMENTS.DEPARTMENT_ID,
    HR.DEPARTMENTS.DEPARTMENT_NAME,
    LOCATION_ID,
    HR.LOCATIONS.CITY
FROM HR.DEPARTMENTS
NATURAL JOIN HR.LOCATIONS
    WHERE HR.DEPARTMENTS.DEPARTMENT_ID > 50;