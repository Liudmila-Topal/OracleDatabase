-- this query that show 
-- DEPARTMENT_ID is fk to DEPARTMENT table
SELECT EMPLOYEE_ID, FIRST_NAME, DEPARTMENT_ID
FROM HR.EMPLOYEES;

-- this query show 	DEPARTMENT_ID, DEPARTMENT_NAME from	DEPARTMENT table
SELECT DEPARTMENT_ID, DEPARTMENT_NAME
FROM HR.DEPARTMENTS;

-- if you try to display data from multiple tables without join, this called cartesian point
SELECT HR.EMPLOYEES.EMPLOYEE_ID,
HR.EMPLOYEES.FIRST_NAME,
HR.DEPARTMENTS.DEPARTMENT_ID,
HR.DEPARTMENTS.DEPARTMENT_NAME
FROM HR.EMPLOYEES, HR.DEPARTMENTS
ORDER BY EMPLOYEE_ID;